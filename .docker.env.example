# Run backend in mock mode (no Toggl API calls). Set to "false" for live mode.
TEST_MODE=false

# Required when TEST_MODE=false: personal API token from https://track.toggl.com/profile
TOGGL_API_TOKEN=your_token_here
# Toggl "me" endpoint; keep default unless Toggl changes host/version
TOGGL_API_ME_URL=https://api.track.toggl.com/api/v9/me

# Earliest week to include (ISO date, Monday of first week)
START_DATE=2026-01-01
# Weekly target hours for calculations
TARGET_HOURS_PER_WEEK=32
# Expected hours per working day (used for holiday reductions)
HOURS_PER_DAY=8
# Working days per week (for UI reference)
DAYS_PER_WEEK=4

# Google Sign-In (frontend + backend)
GOOGLE_CLIENT_ID=your_google_client_id
JWT_SECRET=change_me
# Deployed frontend origin for CORS (adjust to your domain)
FRONTEND_ORIGIN=https://toggl-trackr.ouder.space
# Cookie domain for production (e.g., .ouder.space)
COOKIE_DOMAIN=.ouder.space

# Frontend (Vite) needs its own copy of the Google client id
VITE_GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
