{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "composite": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "dist/server",
    "strict": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["server/**/*.ts"]
}
